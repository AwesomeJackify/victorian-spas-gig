---
import logo from "@assets/images/logo.webp";
import astroLogo from "../assets/images/AstroMediaLogo.svg";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import config from "@data/config.json";
---

<!-- high padding bottom for mobile as the nav is attached to bottom -->
<footer
  class="footer footer-center pt-8 px-4 pb-4 bg-base-200 gap-4 font-sans max-md:pb-24"
>
  <img
    src={logo.src}
    alt="logo"
    class="w-52 max-md:w-32 bg-primary rounded-2xl"
    width={500}
    height={500}
  />
  <!-- <h1 class="py-4 px-8 bg-secondary text-xl font-bold rounded-2xl">
    {config.businessName}
  </h1> -->
  <ul class="menu menu-horizontal max-md:hidden p-0">
    {
      config.pages.map((page: any) => (
        <li>
          <a href={page.url}>{page.name}</a>
        </li>
      ))
    }
  </ul>
  <ul class="menu menu-horizontal">
    {
      config.socials.map((social: any) => (
        <li>
          <a href={social.url} target="_blank" aria-label={social.label}>
            <Icon name={social.icon} class="text-2xl" />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="flex flex-col">
    <h1>
      You can find us at <br /><b
        >Unit 38, 210 Victoria Street West 1010
        <br />&<br />
        10, Ponsonby Road, Grey Lynn 1011</b
      >
    </h1>
  </div>
  <div
    class="flex justify-between w-full max-md:flex-col items-center max-md:gap-6"
  >
    <p>Â© {config.businessName}. All right reserved</p>
    <p class="flex items-center gap-1 max-md:self-center">
      Made possible by <a
        href="https://astromedia.dev"
        class="link"
        target="_blank">Astro Media</a
      ><img
        class="w-5"
        src={astroLogo.src}
        width={10}
        height={10}
        alt="digital agency"
      />
    </p>
  </div>
</footer>
